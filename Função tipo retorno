programa {
  inteiro valorRetornado = 0 
  funcao real calculo1 (inteiro num1, inteiro num2) {
    retorne num1 + num2
    
  }
  funcao inicio(){
    valorRetornado = calculo1(1 , 2)

    escreva("O valor retornado é: ", valorRetornado)
    
