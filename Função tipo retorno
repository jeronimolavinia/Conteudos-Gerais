 programa {
  inteiro valor1 = 0
  inteiro valor2 = 0
  
  funcao real soma(inteiro n1, inteiro n2) {
    retorne n1 + n2 
  }
  
  funcao real subtracao(inteiro n1, inteiro n2 ){
    retorne n1 - n2 
  }

  funcao real multiplicacao(inteiro n1, inteiro n2){
    retorne n1 * n2
  }

  funcao real divisao(inteiro n1, inteiro n2){
    retorne n1/n2
  }
    
  funcao inicio(){
  
    escreva("A soma entre os dois numeros é: ", soma(10 ,10))
    escreva("\n")
    escreva("A subtração entre os dois numeros é: ", subtracao(10 , 10))
    escreva("\n")
    escreva("A multiplicação entre os dois numeros é: ", multiplicacao( 10, 10))
    escreva("\n")
    escreva("A divisão entre os dois numeros é: ", divisao(10,10))
    
}

  funcao real multiplicacao(inteiro n1, inteiro n2){
    retorne n1 * n2
  }

  funcao real divisao(inteiro n1, inteiro n2){
    retorne n1/n2
  }
    
  funcao inicio(){
  
    escreva("A soma entre os dois numeros é: ", soma(10 ,10))
    escreva("\n")
    escreva("A subtração entre os dois numeros é: ", subtracao(10 , 10))
    escreva("\n")
    escreva("A multiplicação entre os dois numeros é: ", multiplicacao( 10, 10))
    escreva("\n")
    escreva("A divisão entre os dois numeros é: ", divisao(10,10))
    
}

 
 
 
    


















