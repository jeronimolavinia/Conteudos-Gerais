///Crie um programa com 3 notas e retorne o valor da media das notas

programa {
  inteiro valorRetornado = 0 
  funcao real calculo (inteiro nota1, inteiro nota2, inteiro nota3) {
    retorne (nota1 + nota2 + nota3)/3
    
  }
  funcao inicio(){
    valorRetornado = calculo(10 , 10 , 10)

    escreva("A média das notas é: ", valorRetornado)
    
