//Crie um progrma que tenha uma função que solicite a idade do usuario
// e retorne o seu valor já escrevendo o resultado/

programa {
  
  funcao inteiro obterIdade(){
    inteiro idade = 0
    escreva("Digite uma idade ")
    leia(idade)
    retorne idade 
  }

  funcao inicio() {
    escreva("A idade digita é: ", obterIdade())
     
  }
}
